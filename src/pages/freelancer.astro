---
import Layout from "../layouts/Layout.astro";
import FreelancerProfile from "../components/FreelancerProfile";
import { getFreelancer } from "../lib/yamlUtils";

const freelancer = getFreelancer();
---

<Layout>
  <main class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Freelancer Profile</h1>
    <FreelancerProfile freelancer={freelancer} client:load />
  </main>
</Layout>
